<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaou.moment.mapper.MomentLikeMapper">

    <resultMap id="BaseResultMap" type="com.xiaou.moment.domain.MomentLike">
        <id column="id" property="id" />
        <result column="moment_id" property="momentId" />
        <result column="user_id" property="userId" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <sql id="Base_Column_List">
        id, moment_id, user_id, create_time
    </sql>

    <insert id="insert" parameterType="com.xiaou.moment.domain.MomentLike" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO moment_likes (moment_id, user_id)
        VALUES (#{momentId}, #{userId})
    </insert>

    <delete id="deleteById" parameterType="long">
        DELETE FROM moment_likes WHERE id = #{id}
    </delete>

    <delete id="deleteByMomentIdAndUserId">
        DELETE FROM moment_likes WHERE moment_id = #{momentId} AND user_id = #{userId}
    </delete>

    <select id="selectByMomentIdAndUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM moment_likes
        WHERE moment_id = #{momentId} AND user_id = #{userId}
    </select>

    <select id="selectByMomentId" parameterType="long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM moment_likes
        WHERE moment_id = #{momentId}
        ORDER BY create_time DESC
    </select>

    <!-- 批量查询用户对多个动态的点赞状态 -->
    <select id="selectLikedMomentIds" resultType="java.lang.Long">
        SELECT moment_id
        FROM moment_likes
        WHERE user_id = #{userId}
        AND moment_id IN
        <foreach collection="momentIds" item="momentId" open="(" separator="," close=")">
            #{momentId}
        </foreach>
    </select>

</mapper> 