<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaou.user.mapper.UserInfoMapper">

    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.xiaou.user.domain.UserInfo">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
        <result column="real_name" property="realName" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="avatar" property="avatar" jdbcType="VARCHAR"/>
        <result column="gender" property="gender" jdbcType="TINYINT"/>
        <result column="birthday" property="birthday" jdbcType="DATE"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="last_login_time" property="lastLoginTime" jdbcType="TIMESTAMP"/>
        <result column="last_login_ip" property="lastLoginIp" jdbcType="VARCHAR"/>
        <result column="register_time" property="registerTime" jdbcType="TIMESTAMP"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="create_by" property="createBy" jdbcType="BIGINT"/>
        <result column="update_by" property="updateBy" jdbcType="BIGINT"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, username, password, nickname, real_name, email, phone, avatar, gender, birthday,
        status, last_login_time, last_login_ip, register_time, remark, create_time, update_time,
        create_by, update_by
    </sql>

    <!-- 查询条件 -->
    <sql id="selectCondition">
        <where>
            <if test="user != null">
                <if test="user.username != null and user.username != ''">
                    AND username LIKE CONCAT('%', #{user.username}, '%')
                </if>
                <if test="user.nickname != null and user.nickname != ''">
                    AND nickname LIKE CONCAT('%', #{user.nickname}, '%')
                </if>
                <if test="user.realName != null and user.realName != ''">
                    AND real_name LIKE CONCAT('%', #{user.realName}, '%')
                </if>
                <if test="user.email != null and user.email != ''">
                    AND email LIKE CONCAT('%', #{user.email}, '%')
                </if>
                <if test="user.phone != null and user.phone != ''">
                    AND phone LIKE CONCAT('%', #{user.phone}, '%')
                </if>
                <if test="user.gender != null">
                    AND gender = #{user.gender}
                </if>
                <if test="user.status != null">
                    AND status = #{user.status}
                </if>
            </if>
            AND status != 2
        </where>
    </sql>

    <!-- 根据ID查询用户 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_info
        WHERE id = #{id}
        AND status != 2
    </select>

    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_info
        WHERE username = #{username}
        AND status != 2
    </select>

    <!-- 根据邮箱查询用户 -->
    <select id="selectByEmail" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_info
        WHERE email = #{email}
        AND status != 2
    </select>

    <!-- 根据手机号查询用户 -->
    <select id="selectByPhone" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_info
        WHERE phone = #{phone}
        AND status != 2
    </select>

    <!-- 根据用户名或邮箱查询用户（用于登录） -->
    <select id="selectByUsernameOrEmail" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_info
        WHERE (username = #{usernameOrEmail} OR email = #{usernameOrEmail})
        AND status != 2
    </select>

    <!-- 查询用户列表 -->
    <select id="selectList" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_info
        <include refid="selectCondition"/>
        ORDER BY create_time DESC
    </select>

    <!-- 查询用户总数 -->
    <select id="selectCount" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM user_info
        <include refid="selectCondition"/>
    </select>

    <!-- 新增用户 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="user.id">
        INSERT INTO user_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="user.username != null">username,</if>
            <if test="user.password != null">password,</if>
            <if test="user.nickname != null">nickname,</if>
            <if test="user.realName != null">real_name,</if>
            <if test="user.email != null">email,</if>
            <if test="user.phone != null">phone,</if>
            <if test="user.avatar != null">avatar,</if>
            <if test="user.gender != null">gender,</if>
            <if test="user.birthday != null">birthday,</if>
            <if test="user.status != null">status,</if>
            <if test="user.registerTime != null">register_time,</if>
            <if test="user.remark != null">remark,</if>
            <if test="user.createBy != null">create_by,</if>
            create_time,
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="user.username != null">#{user.username},</if>
            <if test="user.password != null">#{user.password},</if>
            <if test="user.nickname != null">#{user.nickname},</if>
            <if test="user.realName != null">#{user.realName},</if>
            <if test="user.email != null">#{user.email},</if>
            <if test="user.phone != null">#{user.phone},</if>
            <if test="user.avatar != null">#{user.avatar},</if>
            <if test="user.gender != null">#{user.gender},</if>
            <if test="user.birthday != null">#{user.birthday},</if>
            <if test="user.status != null">#{user.status},</if>
            <if test="user.registerTime != null">#{user.registerTime},</if>
            <if test="user.remark != null">#{user.remark},</if>
            <if test="user.createBy != null">#{user.createBy},</if>
            NOW(),
        </trim>
    </insert>

    <!-- 修改用户 -->
    <update id="update">
        UPDATE user_info
        <set>
            <if test="user.nickname != null">nickname = #{user.nickname},</if>
            <if test="user.realName != null">real_name = #{user.realName},</if>
            <if test="user.email != null">email = #{user.email},</if>
            <if test="user.phone != null">phone = #{user.phone},</if>
            <if test="user.avatar != null">avatar = #{user.avatar},</if>
            <if test="user.gender != null">gender = #{user.gender},</if>
            <if test="user.birthday != null">birthday = #{user.birthday},</if>
            <if test="user.status != null">status = #{user.status},</if>
            <if test="user.remark != null">remark = #{user.remark},</if>
            <if test="user.updateBy != null">update_by = #{user.updateBy},</if>
            update_time = NOW()
        </set>
        WHERE id = #{user.id}
    </update>

    <!-- 根据ID删除用户（逻辑删除） -->
    <update id="deleteById">
        UPDATE user_info
        SET status = 2, update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 批量删除用户（逻辑删除） -->
    <update id="deleteByIds">
        UPDATE user_info
        SET status = 2, update_time = NOW()
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <!-- 更新最后登录信息 -->
    <update id="updateLastLoginInfo">
        UPDATE user_info
        SET last_login_time = #{lastLoginTime},
            last_login_ip = #{lastLoginIp},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 更新密码 -->
    <update id="updatePassword">
        UPDATE user_info
        SET password = #{password},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 更新状态 -->
    <update id="updateStatus">
        UPDATE user_info
        SET status = #{status},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 检查用户名是否存在 -->
    <select id="checkUsernameExists" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM user_info
        WHERE username = #{username}
        AND status != 2
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>

    <!-- 检查邮箱是否存在 -->
    <select id="checkEmailExists" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM user_info
        WHERE email = #{email}
        AND status != 2
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>

    <!-- 检查手机号是否存在 -->
    <select id="checkPhoneExists" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM user_info
        WHERE phone = #{phone}
        AND status != 2
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>
    
    <!-- 批量查询用户 -->
    <select id="selectBatchIds" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_info
        WHERE id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
        AND status != 2
    </select>

</mapper>
