<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaou.common.mapper.NotificationTemplateMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.xiaou.common.domain.NotificationTemplate">
        <id column="id" property="id" />
        <result column="code" property="code" />
        <result column="name" property="name" />
        <result column="title_template" property="titleTemplate" />
        <result column="content_template" property="contentTemplate" />
        <result column="is_enabled" property="isEnabled" />
        <result column="created_time" property="createdTime" />
        <result column="updated_time" property="updatedTime" />
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, code, name, title_template, content_template, is_enabled, created_time, updated_time
    </sql>

    <!-- 根据模板代码查询模板 -->
    <select id="selectByCode" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM notification_template
        WHERE code = #{code} AND is_enabled = 1
    </select>

    <!-- 查询所有启用的模板 -->
    <select id="selectEnabledTemplates" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM notification_template
        WHERE is_enabled = 1
        ORDER BY code
    </select>

    <!-- 插入模板 -->
    <insert id="insert" parameterType="com.xiaou.common.domain.NotificationTemplate" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO notification_template (
            code, name, title_template, content_template, is_enabled
        ) VALUES (
            #{code}, #{name}, #{titleTemplate}, #{contentTemplate}, #{isEnabled}
        )
    </insert>

    <!-- 更新模板 -->
    <update id="update" parameterType="com.xiaou.common.domain.NotificationTemplate">
        UPDATE notification_template 
        SET name = #{name},
            title_template = #{titleTemplate},
            content_template = #{contentTemplate},
            is_enabled = #{isEnabled},
            updated_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除模板 -->
    <delete id="deleteById">
        DELETE FROM notification_template WHERE id = #{id}
    </delete>

</mapper> 