<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- ÂÆö‰πâÊó•ÂøóÊñá‰ª∂ÁöÑÂ≠òÂÇ®Âú∞ÂùÄ -->
    <property name="LOG_HOME" value="./logs" />
    
    <!-- ÁÆÄÂçïÊéßÂà∂Âè∞ËæìÂá∫ -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- ‰∏öÂä°Êó•ÂøóÊéßÂà∂Âè∞ËæìÂá∫ -->
    <appender name="BUSINESS_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} üìã %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- SQLÊó•ÂøóÊéßÂà∂Âè∞ËæìÂá∫ -->
    <appender name="SQL_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} üóÉÔ∏è %boldBlue([%logger{15}]) %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- ÊåâÁÖßÊØèÂ§©ÁîüÊàêÊó•ÂøóÊñá‰ª∂ -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/code-nest.%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>100MB</MaxFileSize>
        </triggeringPolicy>
    </appender>

    <!-- ÈîôËØØÊó•ÂøóÊñá‰ª∂ -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/error.%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>100MB</MaxFileSize>
        </triggeringPolicy>
    </appender>

    <!-- SQLÊó•ÂøóÊñá‰ª∂ -->
    <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/sql.%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>7</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>50MB</MaxFileSize>
        </triggeringPolicy>
    </appender>

    <!-- ÂºÄÂèëÁéØÂ¢ÉÈÖçÁΩÆ -->
    <springProfile name="prod">
        <!-- MyBatis SQLÊó•Âøó - DEBUGÁ∫ßÂà´ÊòæÁ§∫SQL -->
        <logger name="com.xiaou.system.mapper" level="DEBUG" additivity="false">
            <appender-ref ref="SQL_CONSOLE" />
            <appender-ref ref="SQL_FILE" />
        </logger>
        
        <!-- MyBatisÂÜÖÈÉ®Êó•Âøó - ÊòæÁ§∫SQLÂèÇÊï∞ÂíåÁªìÊûú -->
        <logger name="org.apache.ibatis" level="DEBUG" additivity="false">
            <appender-ref ref="SQL_CONSOLE" />
            <appender-ref ref="SQL_FILE" />
        </logger>
        
        <!-- ‰∏öÂä°Êó•Âøó -->
        <logger name="com.xiaou" level="INFO" additivity="false">
            <appender-ref ref="BUSINESS_CONSOLE" />
            <appender-ref ref="FILE" />
        </logger>
        
        <!-- SpringÊ°ÜÊû∂Êó•Âøó -->
        <logger name="org.springframework" level="INFO" additivity="false">
            <appender-ref ref="STDOUT" />
        </logger>
        <logger name="org.redisson" level="INFO" additivity="false">
            <appender-ref ref="STDOUT" />
        </logger>
        <logger name="com.alibaba.druid" level="INFO" additivity="false">
            <appender-ref ref="STDOUT" />
        </logger>
        
        <!-- Root logger -->
        <root level="INFO">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="FILE" />
            <appender-ref ref="ERROR_FILE" />
        </root>
    </springProfile>

    <!-- Áîü‰∫ßÁéØÂ¢ÉÈÖçÁΩÆ -->
    <springProfile name="dev">
        <!-- MyBatis SQLÊó•ÂøóÔºàÁîü‰∫ßÁéØÂ¢ÉÂèØÈÄâÊã©ÂÖ≥Èó≠ÊàñËÆæ‰∏∫INFOÁ∫ßÂà´Ôºâ -->
        <logger name="com.xiaou.system.mapper" level="WARN" additivity="false">
            <appender-ref ref="SQL_FILE" />
        </logger>
        
        <!-- ‰∏öÂä°Êó•Âøó -->
        <logger name="com.xiaou" level="INFO" additivity="false">
            <appender-ref ref="FILE" />
        </logger>
        
        <!-- Root logger -->
        <root level="WARN">
            <appender-ref ref="FILE" />
            <appender-ref ref="ERROR_FILE" />
        </root>
    </springProfile>

    <!-- ÊµãËØïÁéØÂ¢ÉÈÖçÁΩÆ -->
    <springProfile name="test">
        <!-- MyBatis SQLÊó•Âøó -->
        <logger name="com.xiaou.system.mapper" level="DEBUG" additivity="false">
            <appender-ref ref="SQL_CONSOLE" />
            <appender-ref ref="SQL_FILE" />
        </logger>
        
        <!-- ‰∏öÂä°Êó•Âøó -->
        <logger name="com.xiaou" level="INFO" additivity="false">
            <appender-ref ref="BUSINESS_CONSOLE" />
            <appender-ref ref="FILE" />
        </logger>
        
        <!-- Root logger -->
        <root level="INFO">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="FILE" />
            <appender-ref ref="ERROR_FILE" />
        </root>
    </springProfile>

</configuration> 