<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- 定义日志文件的存储地址 -->
    <property name="LOG_HOME" value="./logs" />
    
    <!-- 控制台输出 - 简洁格式 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %highlight(%-5level) %cyan([%logger{20}]) %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- P6Spy SQL日志控制台输出 -->
    <appender name="P6SPY_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cyan(%msg%n)</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- 按照每天生成日志文件 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/code-nest.%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>100MB</MaxFileSize>
        </triggeringPolicy>
    </appender>

    <!-- 错误日志文件 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/error.%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>100MB</MaxFileSize>
        </triggeringPolicy>
    </appender>

    <!-- SQL日志文件 -->
    <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/sql.%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>7</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>50MB</MaxFileSize>
        </triggeringPolicy>
    </appender>

    <!-- 开发环境配置 -->
    <springProfile name="dev">
        <!-- P6Spy SQL日志 -->
        <logger name="p6spy" level="INFO" additivity="false">
            <appender-ref ref="P6SPY_CONSOLE" />
            <appender-ref ref="SQL_FILE" />
        </logger>
        
        <!-- 关闭 MyBatis 原生 SQL日志（由 P6Spy 接管） -->
        <logger name="org.apache.ibatis" level="WARN" additivity="false">
            <appender-ref ref="STDOUT" />
        </logger>
        <logger name="org.mybatis" level="WARN" additivity="false">
            <appender-ref ref="STDOUT" />
        </logger>
        
        <!-- 业务日志（INFO 级别，关闭 Mapper 的 DEBUG SQL 输出） -->
        <logger name="com.xiaou" level="INFO" additivity="false">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="FILE" />
        </logger>
        
        <!-- Spring框架日志 -->
        <logger name="org.springframework" level="WARN" additivity="false">
            <appender-ref ref="STDOUT" />
        </logger>
        
        <!-- 第三方库日志 -->
        <logger name="org.redisson" level="WARN" additivity="false">
            <appender-ref ref="STDOUT" />
        </logger>
        <logger name="com.alibaba.druid" level="WARN" additivity="false">
            <appender-ref ref="STDOUT" />
        </logger>
        <logger name="io.lettuce" level="WARN" additivity="false">
            <appender-ref ref="STDOUT" />
        </logger>
        <logger name="com.zaxxer.hikari" level="WARN" additivity="false">
            <appender-ref ref="STDOUT" />
        </logger>
        
        <!-- Root logger -->
        <root level="WARN">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="FILE" />
            <appender-ref ref="ERROR_FILE" />
        </root>
    </springProfile>

    <!-- 生产环境配置 -->
    <springProfile name="prod">
        <!-- MyBatis SQL日志（生产环境可选择关闭或设为INFO级别） -->
        <logger name="com.xiaou.system.mapper" level="WARN" additivity="false">
            <appender-ref ref="SQL_FILE" />
        </logger>
        
        <!-- 业务日志 -->
        <logger name="com.xiaou" level="INFO" additivity="false">
            <appender-ref ref="FILE" />
        </logger>
        
        <!-- Root logger -->
        <root level="WARN">
            <appender-ref ref="FILE" />
            <appender-ref ref="ERROR_FILE" />
        </root>
    </springProfile>

    <!-- 测试环境配置 -->
    <springProfile name="test">
        <!-- MyBatis SQL日志 -->
        <logger name="com.xiaou.system.mapper" level="DEBUG" additivity="false">
            <appender-ref ref="SQL_CONSOLE" />
            <appender-ref ref="SQL_FILE" />
        </logger>
        
        <!-- 业务日志 -->
        <logger name="com.xiaou" level="INFO" additivity="false">
            <appender-ref ref="BUSINESS_CONSOLE" />
            <appender-ref ref="FILE" />
        </logger>
        
        <!-- Root logger -->
        <root level="INFO">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="FILE" />
            <appender-ref ref="ERROR_FILE" />
        </root>
    </springProfile>

</configuration> 