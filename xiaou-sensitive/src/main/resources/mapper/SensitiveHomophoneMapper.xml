<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaou.sensitive.mapper.SensitiveHomophoneMapper">

    <resultMap id="HomophoneResult" type="com.xiaou.sensitive.domain.SensitiveHomophone">
        <id property="id" column="id"/>
        <result property="originalChar" column="original_char"/>
        <result property="homophoneChars" column="homophone_chars"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectHomophoneVo">
        SELECT id, original_char, homophone_chars, status, create_time
        FROM sensitive_homophone
    </sql>

    <select id="selectHomophoneList" resultMap="HomophoneResult">
        <include refid="selectHomophoneVo"/>
        <where>
            <if test="originalChar != null and originalChar != ''">
                AND original_char LIKE CONCAT('%', #{originalChar}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <select id="selectHomophoneById" resultMap="HomophoneResult">
        <include refid="selectHomophoneVo"/>
        WHERE id = #{id}
    </select>

    <select id="selectEnabledHomophones" resultMap="HomophoneResult">
        <include refid="selectHomophoneVo"/>
        WHERE status = 1
    </select>

    <insert id="insertHomophone" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sensitive_homophone (original_char, homophone_chars, status, create_time)
        VALUES (#{originalChar}, #{homophoneChars}, #{status}, NOW())
    </insert>

    <insert id="batchInsertHomophone">
        INSERT INTO sensitive_homophone (original_char, homophone_chars, status, create_time)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.originalChar}, #{item.homophoneChars}, #{item.status}, NOW())
        </foreach>
    </insert>

    <update id="updateHomophone">
        UPDATE sensitive_homophone
        <set>
            <if test="originalChar != null">original_char = #{originalChar},</if>
            <if test="homophoneChars != null">homophone_chars = #{homophoneChars},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteHomophoneById">
        DELETE FROM sensitive_homophone WHERE id = #{id}
    </delete>

</mapper>
